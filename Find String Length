package javaPrograms;

public class LengthOfaString {
	
	public void withLengthMethod(String str) {
		System.out.println(str.length());
		
	}

	public void withoutLengthMethod(String str) {
		char[] chararray = str.toCharArray();
		int length = 0;
		for (char c : chararray) {
			length = length +1;	
		}
		System.out.println(length);
		
	}

	public static void main(String[] args) {
		LengthOfaString length = new LengthOfaString();
		length.withLengthMethod("Example");
		length.withoutLengthMethod("lengthofanumber");
	}

}
